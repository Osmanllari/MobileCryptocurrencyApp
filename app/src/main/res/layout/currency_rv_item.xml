<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/black_shade_2"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:id="@+id/idRL.Currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTVSymbol"
            android:layout_margin="2dp"
            android:padding="3dp"
            android:layout_toLeftOf="@id/idTVCurrencyRate"
            android:text="Symbol"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVSymbol"
            android:text="Name"
            android:id="@+id/idTvCurrencyName"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="3dp"
            android:layout_margin="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Rate"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginRight="3dp"
            android:id="@+id/idTVCurrencyRate"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:padding="3dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVCurrencyRate"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/idTVPercentageChange"
            android:text="Price Change"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:padding="3dp"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>